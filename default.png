<div id="profile-container" style="text-align:center; margin-top:20px;">
    <img id="profile-pic" src="default.png" alt="پروفایل شما"
         style="width:120px; height:120px; border-radius:50%; border:2px solid #1976d2;">
    <h3 id="profile-name">نام و نام خانوادگی شما</h3>
    <button onclick="changeProfilePic()">تغییر عکس</button>
</div>

<script>
function changeProfilePic(){
    const newPic = prompt("لطفاً مسیر یا لینک عکس جدید را وارد کنید:");
    if(newPic){
        document.getElementById("profile-pic").src = newPic;
        // اگر خواستی می‌توانیم ذخیره‌سازی در localStorage هم اضافه کنیم
    }
}
</script>
